SELECT "device".*, "info"."id" AS "info.id", CONCAT("title", '_', "textPart") AS "info.key" FROM (SELECT "device"."id", "device"."typeId" FROM "devices" AS "device" WHERE "device"."typeId" = '2' AND ( SELECT "deviceId" FROM "device_infos" AS "info" WHERE (CONCAT("title",'_',"textPart") in ('2_Hello') AND "info"."deviceId" = "device"."id") LIMIT 1 ) IS NOT NULL LIMIT 2 OFFSET 0) AS "device" INNER JOIN "device_infos" AS "info" ON "device"."id" = "info"."deviceId" AND CONCAT("title",'_',"textPart") in ('2_Hello');